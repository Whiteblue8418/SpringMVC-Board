<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.or.petspital.member.memberMapper">

	<select resultType="memberVO" parameterType="hashmap" id="logincheck">
		SELECT * 
		FROM MEMBER
		WHERE USER_ID=#{user_id} AND USER_PW=#{user_pw}
	</select>

	<select resultType="String" parameterType="String" id="loginIdCheck">
		SELECT user_pw 
		FROM MEMBER
		WHERE USER_ID = #{user_id} 
	</select>

	<insert parameterType="memberVO" id="insertUser">
		INSERT INTO MEMBER(NUM,USER_NAME,USER_ID,USER_PW,USER_PHONE,USER_ADDR)
		VALUES(num_SEQ.NEXTVAL,#{user_name}, #{user_id}, #{user_pw}, #{user_phone}, #{user_addr}) 
	</insert>

	<select resultType="int" parameterType="String" id="idCheck">
		SELECT count(*) 
		FROM MEMBER
		WHERE user_id=#{user_id} 
	</select>

</mapper>